extends layout

block content

  h1 #{creator.companyName}
  p #{creator.name} in #{creator.location}

  div(style='margin-left:20px;margin-top:20px')

    h4 Items
    if creator_items.length
      dl
        each item in creator_items
          dt
            a(href=item.url) #{item.name}
          dd #{item.stock} in stock
    else
      p This creator has no items.
  
  hr
  p
    a(href=creator.url+'/delete') Delete creator

